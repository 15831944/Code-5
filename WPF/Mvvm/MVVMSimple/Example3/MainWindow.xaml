<Window x:Class="Example3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Example3"
        Title="绑定集合" Height="128" Width="319">
<Window.DataContext>
        <local:Employe />
</Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>        
        <Button Grid.Column="0" Grid.Row="0" Name="ButtonAddDepartment" Content="Add Department" Click="AddDepartment_Click" />
        <TextBox Name="textBox1" Grid.Column="1" Grid.Row="0" Width="100px"/>
        <ComboBox Grid.Column="2" Grid.Row="0"  ItemsSource="{Binding Employees}" Width="50px"/>
   </Grid>
</Window>
