<Window x:Class="Example4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Example4"
        Title="命令绑定" Height="141" Width="290">
    <Window.DataContext>
        <local:Employee />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Content="Add Employee" Command="{Binding AddEmployee}" />
        <TextBox Name="textBox1" Grid.Column="1" Grid.Row="0" Width="100px" Text="{Binding NewEmployee}"/>
        <ComboBox Grid.Column="2" Grid.Row="0"  ItemsSource="{Binding Employees}" Width="50px"/>
    </Grid>
</Window>
